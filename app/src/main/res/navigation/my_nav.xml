<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/firstFragment">

    <fragment
        android:id="@+id/firstFragment"
        android:name="com.project.leverxtask.list.ListNewsFragment"
        android:label="Новости"
        tools:layout="@layout/list_news_fragment" >
        <action
            android:id="@+id/action_firstFragment_to_secondFragment"
            app:destination="@id/secondFragment"/>
    </fragment>
    <fragment
        android:id="@+id/secondFragment"
        android:name="com.project.leverxtask.detail.DetailNewsFragment"
        android:label="Детали"
        tools:layout="@layout/detail_news_fragment" >
        <argument android:name="link"
            app:argType="string"
            app:nullable="true" />
    </fragment>
</navigation>